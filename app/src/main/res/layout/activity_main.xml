<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- EditText para ingresar el título de la novela -->
    <EditText
        android:id="@+id/tituloInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Título de la novela"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"
        android:padding="10dp"/>

    <!-- EditText para ingresar el autor de la novela -->
    <EditText
        android:id="@+id/autorInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Autor de la novela"
        app:layout_constraintTop_toBottomOf="@id/tituloInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginTop="8dp"/>

    <!-- Botón para agregar una nueva novela -->
    <Button
        android:id="@+id/buttonAddBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Novela"
        app:layout_constraintTop_toBottomOf="@id/autorInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botón para sincronizar los datos -->
    <Button
        android:id="@+id/buttonSyncData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar Datos"
        app:layout_constraintTop_toBottomOf="@id/buttonAddBook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- RecyclerView para mostrar la lista de novelas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSyncData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>


